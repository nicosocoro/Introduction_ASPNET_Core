@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";

    //define if exists error
    string str_err = ViewBag.LoginError;
    bool b_err_null = string.IsNullOrEmpty(str_err);

    //if the error is null, doesn't display any error.
    string str_err_message_display = b_err_null ? "display: none;" : string.Empty;
}

<div class="row text-center">

    <div class="col-md-3"></div>
    <div class="col-md-6 col-sm-12">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Login</h3>
                <h6 class="card-subtitle mb-2 text-muted">Introduction to ASP.NET Core - MVC</h6>

                @using (Html.BeginForm("ValidateLogin", "Login", FormMethod.Post))
                {
                    //We add the property "name" to both Textbox in order to pass its value to the corresponding Controller.
                    //Those values must be equal to the parameter's name defined in the Controller.

                    <div class="row">
                        <div class="col-md-12">
                            <input type="text" id="txtUser" name="pUserName" placeholder="Enter user" class="form-control" />
                        </div>
                    </div>

                    <br />

                    <div class="row">
                        <div class="col-md-12">
                            <input type="password" name="pPassword" id="txtPassword" placeholder="Enter password" class="form-control" />
                        </div>
                    </div>

                    <hr />

                    <div class="row text-left" style="@str_err_message_display">
                        <div class="col-md-12">
                            <span class="text-danger">@str_err</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" id="btnLogin" class="btn btn-success btn-block" value="Sign in" />
                        </div>
                    </div>

                    <hr />

                    <div class="row text-right">
                        <div class="col-md-12">
                            @Html.ActionLink("See dummy credentials", "DummyCredentials", "Login", null, new { @style = "color: black;" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" type="text/css" href="~/css/Login/LoginStyles.css" />

<div class="row">
    <div class="col-md-12 col-sm-12" style="margin-top: 4em;">

